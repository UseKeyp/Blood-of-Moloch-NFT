{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true
  },
  "exclude": ["./dist", "node_modules"],
  "include": ["./src", "**/*"]
}
